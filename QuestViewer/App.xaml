<Application x:Class="QuestViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:QuestViewer"
             ShutdownMode="OnMainWindowClose">
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="OpenSans">pack://application:,,,/Resources/OpenSans/#Open Sans</FontFamily>
            <FontFamily x:Key="FontFamilyNormal">#Euphemia</FontFamily>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/VectorIcons.xaml" />
                <ResourceDictionary Source="Resources/Styles/Constants.xaml" />
                
                <ResourceDictionary Source="Views/DiagramViews/Telerik/TelerikBlockStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml" />
                <ResourceDictionary Source="Resources/Styles/RadioButton.xaml" />
                <ResourceDictionary Source="Resources/Styles/TextBoxes.xaml" />
                <ResourceDictionary Source="Resources/Styles/TextStyles.xaml" />
                <ResourceDictionary Source="Resources/Styles/ToggleButton.xaml" />
                <ResourceDictionary Source="Resources/Styles/CheckBoxes.xaml" />
                <ResourceDictionary Source="Resources/Styles/ComboBoxes.xaml" />
                <ResourceDictionary Source="Resources/Styles/Windows.xaml" />
                <ResourceDictionary Source="Resources/Styles/BalloonLable.xaml" />
                <ResourceDictionary Source="Resources/Styles/ListViewItem.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>